generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Veiculo {
  id        String   @id @default(uuid())
  placa     String   @unique @db.VarChar(30)
  chassi    String   @unique @db.VarChar(200)
  renavam   String   @unique @db.VarChar(30)
  modelo    String?  @db.VarChar(100)
  marca     String   @db.VarChar(30)
  ano       Int
  criadoEm  DateTime @default(now()) @map("criado_em")
  atualizadoEm DateTime @updatedAt @map("alterado_em")

  @@map("veiculos")
}